<launch>

    <arg name="output" default="screen"/>
    <arg name="model" default="$(find aleph2_description)/urdf/aleph2.urdf.xacro"/>
    <arg name="fixed" default="false"/>

    <param name="robot_description" command="xacro $(arg model) fixed:=$(arg fixed)" />

    <rosparam command="load" ns="aleph2" file="$(find aleph2_gazebo)/config/pid_gains.yaml"/>

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="$(arg output)"
    args="-urdf 
        -z 1 
        -model aleph2 
        -param robot_description
        -J manip_shoulder_joint 0.73
        -J manip_elbow_joint -2.28
        -J manip_wrist_tilt_joint -1.26
    "/>

</launch>
